{% block javascripts %}
    <script src="https://code.jquery.com/jquery-3.4.1.js"></script>
    <script>

        // Scroll to top button appear
        $(document).scroll(function() {
            var scrollDistance = $(this).scrollTop();
            if (scrollDistance > 100) {
                $('.scroll-to-top').fadeIn();
            } else {
                $('.scroll-to-top').fadeOut();
            }
        });

        // sets underscore
        $(".service").click(function () {
            $(this).addClass("nav-uderscore");
            $(".home, .cv, .projects").removeClass("nav-uderscore");
        });

        $(".home").click(function () {
            $(this).addClass("nav-uderscore");
            $(".service, .cv, .projects").removeClass("nav-uderscore");
        });

        $(".cv").click(function () {
            $(this).addClass("nav-uderscore");
            $(".service, .projects, .home").removeClass("nav-uderscore");
        });

        $(".projects").click(function () {
            $(this).addClass("nav-uderscore");
            $(".service, .cv, .home").removeClass("nav-uderscore");
        });


        // login animation
        $( "#login-nav-mob" ).click(function() {
            if ($(".login-form").hasClass("display-none")){
                $(".login-form").slideDown("slow").removeClass("display-none").css("display", "grid");
            } else {
                $(".login-form").slideUp("slow").addClass("display-none");
            }
        });

        $( "#login-desk" ).click(function() {
            if ($(".login-form").hasClass("display-none")){
                $(".login-form").slideDown("slow").removeClass("display-none").css("display", "grid");
            } else {
                $(".login-form").slideUp("slow").addClass("display-none");
            }
        });

        $(document).mouseup(function(e)
        {
            var loginForm = $(".login-form");
            if (!loginForm.is(e.target) && loginForm.has(e.target).length === 0)
            {
                loginForm.slideUp().addClass("display-none");
            }
        });


        // navbar style
        $(window).scroll(function (){
            scrollFunction();
        });

        function scrollFunction() {
            if ($(window).width() > 769) {
                if ($("body").scrollTop() > 80 || $(document).scrollTop() > 80) {
                    $("#navbar").css({'background': 'rgba(0, 0, 0, 0.6)', 'padding': '0 0 20px 0'});
                } else {
                    $("#navbar").css({'background': 'none', 'padding': '10px', 'transition': '.4s'});
                }
            }
        }

